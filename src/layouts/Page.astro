---
import Layout from '@/layouts/Base.astro'
---

<Layout>
  <nav>
    <a href="/">Home</a>
    <a href="/blog">Posts</a>
    <a href="/about">About</a>
    <a href="/quotes">Quotes</a>
  </nav>
  <main>
    <slot /> 
  </main>
</Layout>

<style>
  nav {
    width: 100%;
    padding: .5rem;
    background-color: var(--accent);
    text-align: center;
    font-weight: 600;
  }
  nav a:link, nav a:visited {
    color: var(--dark);
    padding-right: 1rem;
  }
  nav a:hover {
    color: var(--darkContrast);
  }
  main {
    flex: 1; /* force main to fill all vertical space */
    max-width: 62ch;
    margin-top: 2rem;
    /* border: 1px solid teal; */
  }
</style>