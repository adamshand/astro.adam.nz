---
import Layout from '@/layouts/Page.astro'

export interface Props {
	content: {
		title?: string;
		description?: string;
		pubDate?: string;
		updatedDate?: string;
		heroImage?: string;
	};
}

const {
	content: { title, description, pubDate, updatedDate, heroImage },
} = Astro.props;
---

<Layout>
  {title && <h1 class="title">{title}</h1>}
  <slot /> 
  {updatedDate && <div class="date">Updated on <time>{updatedDate}</time></div>}
  {pubDate && <div class="date">Initially posted <time>{pubDate}</time></div>}
</Layout>

<style>
  * {
    box-sizing: border-box;
  }
  body {
    min-height: 99vh;
    display: flex;
    flex-direction: column;
    justify-content:space-between;
    align-items: center;
    /* border: 1px solid yellow; */
  }
  nav {
    width: 100%;
    padding: .5rem;
    background-color: var(--accent);
    text-align: center;
    font-weight: 600;
  }
  nav a:link, nav a:visited {
    color: var(--dark);
    padding-right: 1rem;
  }
  nav a:hover {
    color: var(--darkContrast);
  }
  main {
    flex: 1; /* force main to fill all vertical space */
    max-width: 62ch;
    /* border: 1px solid teal; */
  }
  .date {
    font-style: italic;
    font-weight: 200;
    font-size: .8rem;
    text-align: right;
  }
  footer {
    margin: 1rem auto;
  }
</style>